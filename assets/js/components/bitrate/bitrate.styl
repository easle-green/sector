.player

  &__bitrate
    width: 230px

    ul
      font-size: 40px
      list-style: none
      padding: 0
      margin: 0

    li
      padding-left: 30px
      line-height: 110%
      a
        color: rgba(0, 0, 0, 0.6)
        transition: color 0.2s ease 0s
        text-decoration: none
      &.active
        background: url(../../../images/svg/big_arrow.svg) no-repeat 0 12px
        font-weight: normal
        a
          color: rgba(255, 255, 255, 1)
          cursor: default