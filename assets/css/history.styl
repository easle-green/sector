.history
  .history-block
    padding: 0 15px 0 40px
  .tracks
    padding-top: 20px
    > .column
      width: 293px !important

.delimiter
  margin: 35px 0 20px
  clear: both
  height: 20px
  span
    display: block
    padding: 0 7%
    text-align: center
    width: 43%
    color: rgba(255, 255, 255, 0.8)
    font: 12px/22px Arial
    float: left
    margin-top: -11px
  div
    size 28% 1px
    background-color: rgba(255, 255, 255, 0.8)
    float: left

  h5
    background: url("../images/svg/icons.svg") no-repeat 34px 0
    height: 40px
    margin: 10px 0 0 0
    padding-left: 108px
    color: #fff
    font-size: 28px
    font-weight: lighter
    line-height: 32px
  div
    font-size: 14px
    line-height: 18px
    margin-bottom: 2px
    font-weight: normal
    > time
      color: rgba(255, 255, 255, 0.7)
      display: block
      font-weight: bold
      width: 19%
      float: left
    > div > div
      color: #fff
      overflow: hidden

.hide-history
  > .column > a
    size 25% 35px
    background: url("../images/sprites/icons.png") no-repeat scroll 62px -185px rgba(0, 0, 0, 0.15)
    background-color: rgba(0, 0, 0, 0.15)
    color: #fff
    display: block
    font-size: 15px
    font-weight: normal
    line-height: 38px
    padding-left: 8%
    text-decoration: none
    border-radius: 12px 12px 0 0
    position: relative
    z-index: 100
    padding-top: 6px
    &.down
      background-image: url("../images/svg/arrow.svg")
      background-position: 62px 15px
