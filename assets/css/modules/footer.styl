body
  &.ge .footer .html5
    background-position: 54px 1px
  &.fr .footer .html5
    background-position: 109px 1px

.description
  border-bottom: 1px solid rgba(0, 0, 0, 0.2)
  padding-bottom: 40px
  h6
    background: url(../images/svg/icons.svg) no-repeat
    color: rgba(0, 0, 0, 0.6)
    font-size: 21px
    font-weight: normal
    margin: 60px 0 20px
    padding-left: 22%
    font: 20px/41px Arial
    height: 42px
    line-height: 41px
  .hear
    background-position: 0 -90px
  .how
    background-position: 0 -182px
  .mp3
    background-position: 2px -272px
  .ogg
    background-position: 0 -360px
  blockquote
    color: rgba(0, 0, 0, 0.8)
    font-size: 15px
    line-height: 18px
    margin: 0 0 20px
    height: 80px
  .columns
    width: 25%
    padding: 0 20px
    > div
      color: #fff
      font-size: 16px
      font-weight: normal
      line-height: 18px
      font: 15px/18px Arial
      text-align: justify


.footer
  color: rgba(255, 255, 255, 0.6)
  font: normal 11px/12px Arial
  padding-top: 40px

  a
    color: rgba(255, 255, 255, 0.6)
    &:hover
      color: rgba(255, 255, 255, 0.9)
      text-decoration: underline

  &__columns
    background #393737
    padding: 60px - 30px
    margin-left -17px

  &__about
    text-align: justify
    strong
      color: #fff

  &__image
    margin-bottom: 15px

  &__first
    height 130px

  &__browsers
    margin-top -15px

  &__xiph
    size 342px 25px
    margin-bottom: 5px
    opacity: 0.8
    &:hover
      opacity: 1

  &__foobar2000
    opacity: 0.8
    &:hover
      opacity: 1

  &__link
    background-color: #48a7e5
    border-radius: 8px
    color: #fff
    display: inline-block
    height: 19px
    line-height: 19px
    margin: 3px 0 0 30px
    padding: 0 15px
    vertical-align: top

  &__html5
    margin: 8px 0 16px

  &__bordered
    padding-bottom: 9px
    img
      margin-left: 12px
    a:first-child img
      margin-left: 0
      margin-right: 13px
    > a
      opacity: 0.8
      &:hover
        opacity: 1
  &__yabra
    width: 133px
    margin-right: 12px

.google
  background-color: #353333
  padding: 20px 0
  &__app
    display: block
    font-size: 30px
    color: #6F6F6F
    padding-right: 98px
    background: url("../images/svg/ico_googleplay.svg") no-repeat center right
    margin-right: 10px
    line-height: 64px
    text-decoration: none
    float: right
    span
      color: #fff
