.equalizer
  height 272px
  overflow: hidden
  .colname
    margin-left 9px
  ul
    list-style: none
    padding: 0
    display: table
    width: 100%
    margin-left: 10px
    margin-top: 16px
  li
    size 6.25% 165px
    display: table-cell
    b, a
      overflow: hidden
      position: relative
      > div
        absolute top 0 left 0
        size 20px 180px
        background-color: #48A7E5
    b
      size 20px 20px
      background-color: #48A7E5
      display: block
      margin-bottom: 10px
      border-radius: 10px
    a
      display: block
      width: 20px
      background-color: #48A7E5
      border-radius: 10px
      cursor: default
      transition: all 0.3s ease-in-out
      position: relative
    span
      color: #fff
      display: block
      font-size: 11px
      margin-top: 10px
      text-align: center
      width: 20px
  .disabled
    b,
    a
      background-color: rgba(0, 0, 0, 0.4)
      /*box-shadow: inset -1px 0 3px rgba(0, 0, 0, 0.5)*/
      > div
        left: -20px
    span
      color: rgba(0, 0, 0, 0.4)
